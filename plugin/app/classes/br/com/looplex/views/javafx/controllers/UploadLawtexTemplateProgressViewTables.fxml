<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<Pane fx:id="anchor_pane"
            xmlns="http://javafx.com/javafx/11.0.2"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="br.com.looplex.views.javafx.controllers.UploadLawtexTemplateProgressViewTables">
    <VBox alignment="CENTER_LEFT"
          fx:id="tablesVbox">
        <VBox alignment="CENTER_LEFT"
              fx:id="lawtexDependenciesVbox"
              style="-fx-border-style: dotted; -fx-border-width: 0 0 1 0; -fx-border-color: gray;">
            <Label fx:id="lawtexDependenciesLabel" text="lawtex_dependencies"
                   style="-fx-font-weight: bold;">
                <HBox.margin>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                </HBox.margin>
                <VBox.margin>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                </VBox.margin>
            </Label>
            <TreeTableView fx:id="lawtexDependencyTreeTableView"
                           prefHeight="480.0" prefWidth="960.0">
                <columns>
                    <TreeTableColumn fx:id="lawtexDependencyTreeTableViewCol1" maxWidth="3500.0" text="document_id"/>
                    <TreeTableColumn fx:id="lawtexDependencyTreeTableViewCol2" maxWidth="3500.0" text="document_file"/>
                    <TreeTableColumn fx:id="lawtexDependencyTreeTableViewCol3" maxWidth="1500.0" text="upload_status"/>
                    <TreeTableColumn fx:id="lawtexDependencyTreeTableViewCol4" maxWidth="1500.0" text="upload_error"/>
                </columns>
                <columnResizePolicy>
                    <TreeTableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                </columnResizePolicy>
                <placeholder>
                    <Label fx:id="lawtexDependencyTreeTableViewPlaceholder" text="tabela_placeholder"/>
                </placeholder>
                <VBox.margin>
                    <Insets bottom="10.0"/>
                </VBox.margin>
            </TreeTableView>
        </VBox>
        <VBox alignment="CENTER_LEFT"
              fx:id="attachmentVBox">
            <Label fx:id="attachmentsDependenciesLabel" text="attachments"
                   style="-fx-font-weight: bold;">
                <HBox.margin>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                </HBox.margin>
                <VBox.margin>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                </VBox.margin>
            </Label>
            <TableView fx:id="attachmentsTableView"
                       prefHeight="240.0" prefWidth="960.0">
                <columns>
                    <TableColumn fx:id="attachmentsTableViewCol1" maxWidth="3500.0" text="attachment_file_name"/>
                    <TableColumn fx:id="attachmentsTableViewCol2" maxWidth="3500.0" text="attachment_file_path"/>
                    <TableColumn fx:id="attachmentsTableViewCol3" maxWidth="1500.0" text="attachment_upload_status"/>
                    <TableColumn fx:id="attachmentsTableViewCol4" maxWidth="1500.0" text="attachment_upload_error"/>
                </columns>
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                </columnResizePolicy>
                <placeholder>
                    <Label fx:id="attachmentsTableViewPlaceholder" text="tabela_placeholder"/>
                </placeholder>
                <VBox.margin>
                    <Insets bottom="10.0"/>
                </VBox.margin>
            </TableView>
        </VBox>
    </VBox>
</Pane>
