<!--&lt;!&ndash;            <pattern>&ndash;&gt;-->
<!--&lt;!&ndash;                [%-5p] %m\n&ndash;&gt;-->
<!--&lt;!&ndash;            </pattern>&ndash;&gt;-->
<!--&lt;!&ndash;        </encoder>&ndash;&gt;-->
<!--    </appender>-->

    <root level="INFO">
        <appender-ref ref="FILE" />
        <appender-ref ref="STDOUT"/>
<!--        <appender-ref ref="JavaFxAppender"/>-->
    </root>

</configuration>