/* Simple Template */
template[TEMP_TemplateAlias] {
	metainfo {
		language = "pt_BR"
		description = "Exemplo de template simples"
	}
	head {
		title = "Um documento qualquer"
 	}

 	body {
 		declarations{
 			+<frutasPreferidasList> : List ("Maçã", "Laranja", "Uva", "Melão", "Banana", "Abacaxi") {
				name = "Frutas Preferidas"
			  	request = "..."
			  	atomic = false
 			},

 			+|frutasMaisPreferidasList| : Vector[String] {
 				name = "Frutas mais preferidas dentre as preferidas"
 				request = "..."
 				help = "..."
 			}
 		}
		operations {
			print "numeros como foram respondidos: " & <frutasPreferidasList>,
			<xx> = expandedNumber(<frutasPreferidasList>,"aaa"),
			<frutasPreferidasList>.grammar("aaa"),
			<frutasPreferidasList>.error("aaa"),
			|frutasMaisPreferidasList| = <frutasPreferidasList>.select(),
			|frutasMaisPreferidasList| = <frutasPreferidasList>.select("Dentre as frutas escolhidas, qual é a sua preferida?"),
			|frutasMaisPreferidasList| = <frutasPreferidasList>.select("Dentre as frutas escolhidas, qual é a sua preferida?",1),
			|frutasMaisPreferidasList| = <frutasPreferidasList>.select("Dentre as frutas escolhidas, qual é a sua preferida?",1,2)
		}
 	}
}