/* Simple Template */
template[TEMP_TemplateAlias] {
	metainfo {
		language = "pt_BR"
		description = "Exemplo de template simples"
		tags {
			"template", "simples"
		}
		declarations {
			&<varGlobal> : String {
				name = "Variável Global"
				request = "Qual o valor da variável?"
			}
		}
	}
	head {
		title = "Um documento qualquer"
 	}
 	body {
		declarations {
			&<varLocal> : String {
				name = "Variável Local do Body"
				request = "Qual o valor da variável?"
			}
		}
		operations {
			print {
				[version = "Um período localmente definido em Body."],
				[version = "Segunda versão de um período localmente definido em Body."]
			},
			print {
				version = "Segundo período local definido em Body com var: " & <varLocal>
			},
			use *period[PER_Global]
		}
 	}
}

*period[PER_Global] {
	name = "Um exemplo de período global"
	description = "Um período globalmente definido para testes de um template simples."
	tags {
		"período", "global"
	}
	declarations {
		+<varLocal> : String {
			name = "Variável Local do Body"
			request = "Qual o valor da variável do período?"
		}
	}
	operation {
		print {
			[version = "Imprimindo a variável do período: " & <varLocal>],
			[version = "Do período a variável imprimindo ao estilo Ioda: " & <varLocal>, name = "Estilo Ioda"]
		}
	}
}