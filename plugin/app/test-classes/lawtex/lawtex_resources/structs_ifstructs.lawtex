template[TEMP_TemplateAliasIFSTRUCT] {
	metainfo {
		language = "pt_BR"
	}
	head {
		title = "Teste de Ifstructs"
 	}
 	body {
		operations {
			use *period[PER_AliasPeriodIfStruct]
		}
 	}
}

*period[PER_AliasPeriodIfStruct] {
	name = "Per√≠odo Anonimo"
	declarations {
		+<objectAlias> : *StructAliasIfStruct
	}
	operation {
		print {
			[version = "..." & <objectAlias.f1>]
		}
	}
}

*struct[StructAliasIfStruct] {
	/*id = printIf([f1] == "azul","int "+[f2],"bool "+[f2])*/
	name = "IFSTRC"
	request = "S1"
	fields {
		+[f1] : String {
			name = "1"
		},
		if ( [f1] == "azul" ) {
			&[f2] : Integer {
				name = "2"
			},
			if ( [f2] > 0 ) {
				&[f3] : String {
					name = "3"
				}
			},
			if ( [f2] > 100 ) {
				&[f4] : String {
					name = "4"
				}
			}
		} elseif ( [f1] == "amarelo" ) {
			+[f2] : Boolean {
				name = "2"
			},
			if ( [f2] ) {
				&[f3] : Integer {
					name = "3"
				}
			}
		} else {
			&[f3] : Date {
				name = "3"
			}
		}
	}
}